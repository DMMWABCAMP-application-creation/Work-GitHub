<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 my-5">

      <h2>会員情報編集</h2>
      
      <%= form_with model: @customer do |f| %>
        <div>
          <h4>氏名</h4>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
        </div>
        <div>
          <h4>フリガナ</h4>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
        </div>
        <div>
          <h4>郵便番号</h4>
            <%= f.text_field :postal_code %>
        </div>
        <div>
          <h4>住所</h4>
            <%= f.text_field :address %>
        </div>
        <div>
          <h4>電話番号</h4>
            <%= f.text_field :telephone_number %>
        </div>
        <div>
          <h4>メールアドレス</h4>
            <%= f.text_field :email %>
        </div>
        
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
        
        
        <%= link_to '退会する', customers_confilm_path, class: "btn btn-danger" %>
        
      <% end %>
    </div>
  </div>
</div>



