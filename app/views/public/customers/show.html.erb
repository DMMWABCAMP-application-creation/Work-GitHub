<h2 class="m-1">マイページ</h2>

<div class="container">
  <div class="row">
    <div class="col-2">
      <h2>登録情報</h2>
    </div>
    <div class="col -2">
      <button type="button" class="btn btn-success">
        <%= link_to customers_information_edit_path do %>
        編集する
        <% end %>
      </button>
      
    </div>
  </div>
</div>

<table class="table table-bordered pull-left col-5 ml-3">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>


<div class="container">
  <div class="row">
    <div class="col-2">
      <h2>注文履歴</h2>
    </div>
    <div class="col -2">
      <button type="button" class="btn btn-primary">
        <%= link_to orders_path do %>
        一覧を見る
        <% end %>
      </button>
      
    </div>
  </div>
</div>






