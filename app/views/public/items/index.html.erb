<div class="container">
  <div class="row">
    <div class="col">
      <h1>商品一覧(全<%= @record_count %>件)</h1>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to(item_path(item)) do %>
              <%= image_tag item.image, size: "200x200" %>
              <%= item.name %>
              <p>￥<%= item.price %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= paginate @items %>
    </div>
  </div>
</div>

