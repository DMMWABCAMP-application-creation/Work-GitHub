<div class="container">
  <div class="row">
    <div class="col">
      <h1>注文履歴一覧</h1>
        <table class="table table-bordered pull-left ml-3">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td>
              <% order.order_items.each do |order_item| %>
                <p><%= order_item.item.name %></p>
                <% @total += order_item.subtotal %>
              <% end %>
            </td>
            <td>
              
              <%= @total %>円
            </td>
            
            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </table>


