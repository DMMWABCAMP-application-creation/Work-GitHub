<h1>注文履歴詳細</h1>

<div>
  <h3>購入者</h3>
  <p><%= @order.name %></p>
  <h3>注文日</h3>
  <p><%= @order.created_at %></p>
  <h3>配送先</h3>
  <p><%= @order.address %></p>
  <h3>支払方法</h3>
  <p><%= @order.payment_method_i18n %></p>
</div>

<% @order_item.each do |order_item|%>
  <%= order_item %>

   <%= link_to order_item.updated_at, order_path(order_item.id) %>
   <%= order_item.order.name %>
   <%= order_item.price %>
 <% end %>










