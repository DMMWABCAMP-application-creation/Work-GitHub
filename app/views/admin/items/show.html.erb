<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 my-5">
      <h1>商品説明</h1>
      <div class="row">
        <div class="col">
          <div>
            <%= image_tag @item.image, size: "200x200" %>
          </div>
        </div>
        <div class="col">
          <div>
            <h5>商品名</h5>
            <%= @item.name %>
  
            <h5>商品説明</h5>
            <%= @item.introduction %>
            
            <h5>税込価格（税抜価格）</h5>
            <%= @item.add_tax_price.to_s(:delimited) %>
            (<%= @item.price %>)円
            
            <p><%= link_to "編集する", edit_admin_item_path, class:' btn btn-success' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







