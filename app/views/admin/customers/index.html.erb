<div class="container">
  <div class="row">
    <div class="col">
      <h1>会員一覧</h1>
      <table class="table table-bordered pull-left ml-3">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name, admin_customer_path(customer.id) %>
                <%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.active? %>
              <p>有効</p>
              <% else %>
              <p>退会</p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <%  end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
