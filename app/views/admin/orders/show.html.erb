<h1>注文履歴詳細</h1>

<div>
  <h3>購入者</h3>
  <p><%= @order_item.order.name %></p>
  <h3>注文日</h3>
  <p><%= @order_item.created_at %></p>
  <h3>配送先</h3>
  <p><%= @order_item.order.address %></p>
  <h3>支払方法</h3>
  <p><%= @order_item.order.payment_method_i18n %></p>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.subtotal %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-3 d-flex align-items-end" >
      <table>
        <tr>
          <td>商品合計</td>
          <td><%= @order_item.order.billed_amount %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @order_item.order.billed_amount + 800 %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>


