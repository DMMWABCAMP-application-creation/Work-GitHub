<div class="container">
  <div class="row">
    <div class="col">
      <h1>注文履歴一覧</h1>
      
      <div>
        <table class="table table-bordered">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
          
          <% @order_page.each do |order|%>
          <% sum = 0 %>
          <% order.order_items.each do |order_item| %>
            <% sum += order_item.amount %>
          <% end %>
          <tr>
            <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
            <td><%= order.name %></td>
            <td><%= sum %></td>
          </tr>
          <% end %>
        </table>
        
        <%= paginate @order_page %>
      </div>
    </div>
  </div>
</div>


