<div class="container">
  <div class="row">
    <div class="col">
      <h1>注文履歴一覧</h1>
      
      <div>
        <table class="table table-bordered">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
          <% @order_item.each do |order_item|%>
          <tr>
            <td><%= link_to order_item.updated_at, admin_order_path(order_item.id) %></td>
            <td><%= order_item.order.name %></td>
            <td><%= order_item.amount %></td>
          </tr>
          <% end %>
        </table>
        
        <%= paginate @order_page %>
      </div>
    </div>
  </div>
</div>


